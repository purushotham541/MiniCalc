<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:background="#ceb572"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raj.minicalc.MainActivity">


    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:gravity="center"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:inputType="number"
        android:hint="Number 2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:inputType="number"
        android:gravity="center"
        android:hint="Number 1"

        android:layout_alignParentTop="true" />


    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/per"
        android:gravity="center"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/ad"
        android:layout_alignLeft="@+id/ad"
        android:layout_alignStart="@+id/ad" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:gravity="center"
        android:layout_alignBaseline="@+id/per"
        android:layout_alignBottom="@+id/per"
        android:layout_alignLeft="@+id/mul"
        android:layout_alignStart="@+id/mul" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:id="@+id/tv1"
        android:layout_below="@+id/et2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:id="@+id/ad"
        android:layout_below="@+id/tv1"
        android:layout_alignRight="@+id/et1"
        android:layout_alignEnd="@+id/et1" />

    <Button
        android:text="*"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mul"
        android:layout_alignBaseline="@+id/ad"
        android:layout_alignBottom="@+id/ad"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sb"
        android:gravity="center"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/mul"
        android:layout_alignBottom="@+id/mul"
        android:layout_toRightOf="@+id/mul"
        android:layout_toEndOf="@+id/mul" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dv"
        android:layout_alignBaseline="@+id/c"
        android:layout_alignBottom="@+id/c"
        android:layout_alignLeft="@+id/sb"
        android:layout_alignStart="@+id/sb" />
</RelativeLayout>
